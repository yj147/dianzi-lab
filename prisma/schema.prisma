generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["omitApi"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  passwordHash String @map("password")
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  ideas     Idea[]
  assessments Assessment[]
  sentMessages     Message[] @relation("SentMessages")
  receivedMessages Message[] @relation("ReceivedMessages")
}

enum Role {
  USER
  ADMIN
}

model Idea {
  id          String      @id @default(cuid())
  title       String      @db.VarChar(50)
  description String      @db.VarChar(1000)
  status      IdeaStatus  @default(PENDING)
  tags        String[]
  userId      String
  user        User        @relation(fields: [userId], references: [id])
  isDeleted   Boolean     @default(false)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  assessment  Assessment?
  messages    Message[]

  // 案例展示扩展字段
  screenshots       String[] @default([])
  techStack         String[] @default([])
  projectDuration   String?  @db.VarChar(50)
  demoUrl           String?  @db.VarChar(2048)

  @@index([userId])
  @@index([status])
}

enum IdeaStatus {
  PENDING
  APPROVED
  IN_PROGRESS
  COMPLETED
}

model Message {
  id         String   @id @default(cuid())
  content    String   @db.VarChar(1000)
  senderId   String
  receiverId String
  ideaId     String
  isRead     Boolean  @default(false)
  createdAt  DateTime @default(now())

  sender   User @relation("SentMessages", fields: [senderId], references: [id])
  receiver User @relation("ReceivedMessages", fields: [receiverId], references: [id])
  idea     Idea @relation(fields: [ideaId], references: [id])

  @@index([receiverId, createdAt])
  @@index([ideaId, createdAt])
  @@index([senderId, createdAt])
}

model Assessment {
  id            String   @id @default(cuid())
  userId        String
  targetUser    Int      @db.SmallInt
  channel       Int      @db.SmallInt
  market        Int      @db.SmallInt
  tech          Int      @db.SmallInt
  budget        Int      @db.SmallInt
  businessModel Int      @db.SmallInt
  team          Int      @db.SmallInt
  risk          Int      @db.SmallInt
  traffic       Int      @db.SmallInt
  finalScore    Int      @db.SmallInt
  feedback      String[]
  createdAt     DateTime @default(now())
  user          User     @relation(fields: [userId], references: [id])
  ideaId        String?  @unique
  idea          Idea?    @relation(fields: [ideaId], references: [id])
  @@index([userId])
}
